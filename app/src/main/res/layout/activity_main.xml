<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.supinfo.supcooking.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="79dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="@string/title_activity_login"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorTitle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_alignBaseline="@+id/ETEmail"
            android:text="@string/text_view_email_activity_login"
            android:layout_marginStart="60dp"
            android:id="@+id/TVEmail"
            android:textColor="@color/colorTextView"/>

        <EditText
            android:id="@+id/ETEmail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="75dp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:textColor="@color/colorTitle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ETPassword"
            android:layout_alignEnd="@id/TVEmail"
            android:text="@string/text_view_password_activity_login"
            android:id="@+id/TVPassword"
            android:layout_alignRight="@id/TVEmail"
            android:textColor="@color/colorTextView"/>

        <EditText
            android:id="@+id/ETPassword"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:inputType="textPassword"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:textColor="@color/colorTitle"/>


        <Button
            android:id="@+id/BTNLogin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="@string/text_button_login_activity_login"
            android:onClick="onClickLogin"/>
        <Button
            android:id="@+id/BTNRegister"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/text_button_Register_activity_register"
            android:onClick="onClickRegister"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
