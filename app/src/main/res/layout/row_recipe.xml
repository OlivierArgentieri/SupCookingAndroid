<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.supinfo.supcooking.RecipesActivity"
    >
    <TextView
        android:id="@+id/TVRowRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/colorTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/IMGVRowRecipe"
        android:layout_toEndOf="@+id/IMGVRowRecipe"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:id="@+id/IMGVRowRecipe"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/image_view_description_row_recipe"
        android:adjustViewBounds="true"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:textSize="13sp"
        android:id="@+id/TVRowRecipeType"
        android:textColor="@color/colorTitle"
        android:layout_below="@+id/TVRowRecipeName"
        android:layout_alignLeft="@id/TVRowRecipeName"
        android:layout_alignStart="@id/TVRowRecipeName" />

    <RatingBar
        android:id="@+id/RBRowRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@id/TVRowRecipeType"
        android:numStars="5"
        android:rating="0"
        android:layout_alignLeft="@id/TVRowRecipeType"
        android:layout_alignStart="@id/TVRowRecipeType" />

</RelativeLayout>